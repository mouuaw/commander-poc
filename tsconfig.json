{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "ES6",
            "ES2015",
            "DOM"
        ],
        "outDir": "lib",
        "rootDir": "src",
        "types": [
            "node",
            "inquirer",
            "figlet",
            "fs-extra"
        ],
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "templates"
    ]
}